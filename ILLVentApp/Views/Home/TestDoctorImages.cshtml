@model List<ILLVentApp.Domain.Models.Doctor>
@{
    ViewData["Title"] = "Test Doctor Images";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">Doctor Images Test</h2>
    <div class="row">
        @foreach (var doctor in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@doctor.Thumbnail" class="card-img-top" alt="@doctor.Name Thumbnail" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@doctor.Name</h5>
                        <p class="card-text">@doctor.Specialty</p>
                        <a href="@doctor.ImageUrl" target="_blank" class="btn btn-primary">View Full Image</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 