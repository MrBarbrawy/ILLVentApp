@model List<ILLVentApp.Domain.Models.Pharmacy>
@{
    ViewData["Title"] = "Test Pharmacy Images";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">Pharmacy Images Test</h2>
    <div class="row">
        @foreach (var pharmacy in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@pharmacy.Thumbnail" class="card-img-top" alt="@pharmacy.Name Thumbnail" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@pharmacy.Name</h5>
                        <p class="card-text">@pharmacy.Location</p>
                        <a href="@pharmacy.ImageUrl" target="_blank" class="btn btn-primary">View Full Image</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 